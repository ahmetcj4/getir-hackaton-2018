<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- SublimePicker attributes -->
        <item name="spHeaderBackgroundPtr">@color/background</item>
        <item name="spCalendarDayTextColorPtr">@color/day_item_color</item>
        <item name="spPrimaryTextSecondaryWhenActivatedMaterialInversePtr">@color/date_item_color</item>
        <item name="spNumbersTextColorPtr">@color/day_item_color</item>
        <item name="spNumbersInnerTextColorPtr">@color/day_item_color</item>
        <item name="spNumbersBackgroundColorPtr">@color/background</item>
    </style>
</resources>
