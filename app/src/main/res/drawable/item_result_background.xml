<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <corners android:topRightRadius="@dimen/above_normal_margin"
                android:topLeftRadius="@dimen/normal_padding"
                android:bottomLeftRadius="@dimen/normal_padding"
                android:bottomRightRadius="@dimen/above_normal_margin"
                />
        </shape>
    </item>
    <item android:left="@dimen/normal_padding">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners
                android:bottomRightRadius="@dimen/above_normal_margin"
                android:topRightRadius="@dimen/above_normal_margin"
                />
        </shape>
    </item>


</layer-list>